<div class="card m-2">
  <div class="row">
    <div class="col-12 col-md-6 p-3">
     <figure class="">
        <img
          src="{{this.item.image.src}}"
          class="border-gray img-fluid"
          alt="{{this.item.image.title}} {{this.item.image.description}}"
        />
      </figure>
    </div>
    <div class="col-12 col-md-6 p-3">
      <p class="card-text">
        {{this.item.image.title}}
      </p>
      <p class="card-text">
        {{{this.item.body}}}
      </p>
      <p class="card-text mb-2">
				<p>Source : {{this.item.url}}</p>
        <a role="link" class="btn btn-outline-light" href="{{this.item.url}}">
          {{this.item.date_y_m_d}}
        </a>
      </p>
    </div>
  </div>
</div>